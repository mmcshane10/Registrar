@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model IEnumerable<Registrar.Models.Student>

<h1>Items for @User.Identity.Name</h1>

@if (Model.Any())
{
  <ul>
    @foreach (Student student in Model)
    {
      <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
    }
  </ul>
} 
else
{
  <h3>No items have been added yet!</h3>
}

<p>@Html.ActionLink("Add new student", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>